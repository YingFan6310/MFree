<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:id="@+id/now_playing_content"
    >
    <!--<com.xiefei.circularmusicprogressbar.CircularMusicProgressBar-->
        <!--android:layout_width="200dp"-->
        <!--android:layout_height="200dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:layout_marginTop="100dp"-->
        <!--android:src="@mipmap/icon"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--app:progress_bar_width="2dp"-->
        <!--app:progress_bar_color="@android:color/background_dark"-->
        <!--app:progress_bar_second_color="@android:color/holo_red_dark"-->
        <!--/>-->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@drawable/gaosi"
        android:id="@+id/blur_background"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"
        />
    <RelativeLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        >
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="8dp"
        android:id="@+id/toolbar">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/white"
            android:id="@+id/song_title"
            android:text="musicname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/song_title"
            android:textColor="@color/now_playing_artist_color"
            android:id="@+id/song_artist"
            android:text="aritist"/>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="36dp"
        app:cardElevation="1dp">
    <com.xiefei.openmusicplayer.ui.widget.SquareImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType='centerCrop'
        android:id="@+id/song_image"
        android:src="@drawable/navigation_view_background"
        android:layout_centerHorizontal="true"/>
    </android.support.v7.widget.CardView>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_above="@+id/linearLayout"
        android:id="@+id/song_seekbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="36dp" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginBottom="48dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:id="@+id/linearLayout">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_shuffle"
            android:id="@+id/shuffle"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:id="@+id/play_prev"
            android:src="@drawable/ic_prev_song"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:id="@+id/play"
            android:src="@drawable/ic_play"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:id="@+id/play_next"
            android:src="@drawable/ic_next_song"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentLeft="true"
            android:id="@+id/repeat"
            android:src="@drawable/ic_repeat"/>

    </LinearLayout>
</RelativeLayout>
    </merge>