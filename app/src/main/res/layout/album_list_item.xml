<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="@dimen/card_view_elevation"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.xiefei.openmusicplayer.ui.widget.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:id="@+id/image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/primary_title"
            android:textColor="@android:color/primary_text_light"
            android:layout_marginTop="@dimen/activity_vertical_margin_small"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/standard_text_large"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondary_title"
            android:textSize="@dimen/standard_text_small"
            android:layout_marginBottom="@dimen/activity_vertical_margin_small"
            android:layout_marginLeft="@dimen/activity_horizontal_margin_small"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@android:color/secondary_text_light"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>